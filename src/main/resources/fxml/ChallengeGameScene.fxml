<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane
    style="-fx-background-color: #f0f2f5; -fx-font-family: 'Roboto', 'Segoe UI';"
    xmlns="http://javafx.com/javafx/25"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.memorygame.client.controller.ChallengeGameController">

    <!-- Thanh trên -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20"
              style="-fx-background-color: white; -fx-padding: 10 25; -fx-border-color: #e5e7eb; -fx-border-width: 0 0 1 0;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: 700; -fx-text-fill: #1f2937;"
                   text="Đấu Trường Trí Nhớ" />
            <Region HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER" spacing="10">
                <HBox alignment="CENTER"
                      style="-fx-background-color: #eff6ff; -fx-background-radius: 10; -fx-padding: 5 12;">
                    <Label fx:id="lblTotalRounds"
                           style="-fx-font-size: 13px; -fx-text-fill: #3b82f6; -fx-font-weight: 600;"
                           text="Tổng Vòng: 10" />
                </HBox>
                <HBox alignment="CENTER"
                      style="-fx-background-color: #fef2f2; -fx-background-radius: 10; -fx-padding: 5 12;">
                    <Label fx:id="lblMemorizeTime"
                           style="-fx-font-size: 13px; -fx-text-fill: #ef4444; -fx-font-weight: 600;"
                           text="Tạm dừng: 5s" />
                </HBox>
            </HBox>

            <Button onAction="#backToMenu"
                    style="-fx-background-color: #e5e7eb; -fx-text-fill: #4b5563; -fx-font-size: 13px; -fx-background-radius: 8; -fx-padding: 8 16; -fx-font-weight: 600; -fx-cursor: hand;"
                    text="Menu Chính" />
        </HBox>
    </top>

    <!-- Phần giữa -->
    <center>
        <VBox alignment="CENTER" spacing="25" style="-fx-padding: 20 0;">
            
            <!-- Khối điểm -->
            <HBox alignment="CENTER" spacing="40">
                <VBox alignment="CENTER" spacing="6"
                      style="-fx-background-color: #ffffff; -fx-padding: 20 25; -fx-pref-width: 220; -fx-background-radius: 15; -fx-border-color: #10b981; -fx-border-width: 2; -fx-border-radius: 15;">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-text-fill: #1f2937;"
                           text="Người Chơi Bạn" />
                    <Label fx:id="lblPlayerScore"
                           style="-fx-font-size: 34px; -fx-font-weight: 900; -fx-text-fill: #10b981;"
                           text="0" />
                </VBox>

                <VBox alignment="CENTER" spacing="6"
                      style="-fx-background-color: #ffffff; -fx-padding: 20 25; -fx-pref-width: 220; -fx-background-radius: 15; -fx-border-color: #f59e0b; -fx-border-width: 1; -fx-border-radius: 15;">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-text-fill: #1f2937;"
                           text="Đối Thủ" />
                    <Label fx:id="lblOpponentScore"
                           style="-fx-font-size: 34px; -fx-font-weight: 900; -fx-text-fill: #f59e0b;"
                           text="0" />
                </VBox>
            </HBox>

            <!-- Thông tin vòng -->
            <HBox alignment="CENTER" spacing="25">
                <VBox alignment="CENTER" spacing="3"
                      style="-fx-background-color: #ffffff; -fx-padding: 8 20; -fx-background-radius: 12; -fx-border-color: #d1d5db; -fx-border-width: 1;">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #6b7280; -fx-font-weight: 500;"
                           text="Vòng Hiện Tại" />
                    <Label fx:id="lblCurrentRound"
                           style="-fx-font-size: 22px; -fx-font-weight: 900; -fx-text-fill: #4f46e5;"
                           text="01" />
                </VBox>

                <VBox alignment="CENTER" spacing="3"
                      style="-fx-background-color: #ffffff; -fx-padding: 8 20; -fx-background-radius: 12; -fx-border-color: #d1d5db; -fx-border-width: 1;">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #6b7280; -fx-font-weight: 500;"
                           text="Thời Gian" />
                    <Label fx:id="lblCountdown"
                           style="-fx-font-size: 22px; -fx-font-weight: 900; -fx-text-fill: #ef4444;"
                           text="05s" />
                </VBox>

                <Label fx:id="lblGameStatus"
                       style="-fx-font-size: 16px; -fx-font-weight: 700; -fx-text-fill: #0ea5e9;"
                       text="BẮT ĐẦU GHI NHỚ!" />
            </HBox>

            <!-- Từ hiển thị -->
            <StackPane alignment="CENTER"
                       style="-fx-background-color: #e0f2fe; -fx-padding: 50; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 30, 0.1, 0, 10); -fx-pref-width: 600; -fx-min-height: 180;">
                <Label fx:id="lblWord"
                       style="-fx-font-size: 56px; -fx-font-weight: 900; -fx-text-fill: #1e40af;"
                       text="Elephant" />
            </StackPane>

            <!-- Ô nhập và nút gửi -->
            <HBox alignment="CENTER" spacing="12" style="-fx-padding: 5 0 10 0;">
                <TextField fx:id="txtAnswer" prefWidth="400"
                           promptText="Nhập chuỗi ký tự đã nhớ..."
                           style="-fx-background-radius: 12; -fx-font-size: 15px; -fx-padding: 10 16; -fx-border-color: #d1d5db; -fx-border-radius: 12;" />
                <Button fx:id="btnSend" onAction="#sendAnswer"
                        style="-fx-background-color: #7c3aed; -fx-text-fill: white; -fx-background-radius: 12; -fx-font-size: 16px; -fx-padding: 10 30; -fx-font-weight: 700; -fx-cursor: hand;"
                        text="Gửi" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
