<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.memorygame.client.controller.ChallengeInviteDialogController"
      alignment="CENTER" spacing="15"
      style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-radius: 12; -fx-background-radius: 12;"
      prefWidth="400" prefHeight="280">

    <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

    <Label text="LỜI MỜI THÁCH ĐẤU" style="-fx-font-size: 20px; -fx-font-weight: 800; -fx-text-fill: #1f2937;"/>
    
    <VBox spacing="8" alignment="CENTER_LEFT">
        <Label fx:id="lblInviter" style="-fx-font-size: 16px; -fx-font-weight: 600;"/>
        <Label fx:id="lblThinkTime" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
        <Label fx:id="lblRounds" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
        <Label fx:id="lblWaitTime" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
    </VBox>

    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="btnAccept" text="Đồng Ý" onAction="#acceptInvite"
                style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: 700; -fx-padding: 12 30; -fx-background-radius: 10;"/>
        <Button fx:id="btnDecline" text="Từ Chối" onAction="#declineInvite"
                style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: 700; -fx-padding: 12 30; -fx-background-radius: 10;"/>
    </HBox>
</VBox>